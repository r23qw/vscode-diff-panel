{
  "publisher": "aaron00101010",
  "name": "diff-panel",
  "displayName": "Diff Panel",
  "version": "1.0.0",
  "description": "A quick way to compare two files",
  "author": "aaron00101010",
  "repository": "git@github.com:Aaron00101010/vscode-diff-panel.git",
  "categories": [
    "Other"
  ],
  "main": "./out/src/extension.js",
  "engines": {
    "vscode": "^1.74.0"
  },
  "activationEvents": [],
  "browser": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "diff-panel.newDiffEditor",
        "title": "Diff Panel: New Diff Editor"
      },
      {
        "command": "diff-panel.newFile",
        "title": "Diff Panel: New File",
        "icon": "$(new-file)"
      },
      {
        "command": "diff-panel.newFolder",
        "title": "Diff Panel: New Folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "diff-panel.refreshExplorer",
        "title": "Diff Panel: Refresh Explorer",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "diff-panel.newFile",
          "when": "view == diff-panel-folder",
          "group": "navigation"
        },
        {
          "command": "diff-panel.newFolder",
          "when": "view == diff-panel-folder",
          "group": "navigation"
        },
        {
          "command": "diff-panel.refreshExplorer",
          "when": "view == diff-panel-folder",
          "group": "navigation"
        }
      ]
    },
    "views": {
      "diff-panel": [
        {
          "id": "diff-panel-folder",
          "name": "Explorer",
          "type": "tree"
        },
        {
          "id": "diff-panel-feedback",
          "name": "Feedback",
          "type": "webview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "icon": "$(diff)",
          "id": "diff-panel",
          "title": "Diff Panel: Explorer"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "diff-panel-folder",
        "contents": ""
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "dev:webview": "cd webview-ui && pnpm run dev",
    "build:webview": "cd webview-ui && pnpm run build",
    "install:all": "pnpm install && cd webview-ui && pnpm install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "pretest": "pnpm run compile && pnpm run lint",
    "vscode:prepublish": "npm i --force&& npm run compile && npm run build:webview && pnpm i",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.32",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.5",
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^7.2.0",
    "@types/node": "^18.16.1",
    "@types/vscode": "^1.74.0",
    "eslint": "^8.39.0",
    "glob": "^7.2.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.9.5",
    "vscode-test": "^1.6.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
