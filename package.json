{
  "name": "diff-panel",
  "displayName": "Diff Panel",
  "version": "1.0.0",
  "description": "A quick way to compare two files",
  "author": "Aaron00101010",
  "categories": [
    "Other"
  ],
  "main": "./out/src/extension.js",
  "browser": "./out/src/extension.js",
  "engines": {
    "vscode": "^1.46.0"
  },
  "activationEvents": [    
  ],
  "contributes": {
    "commands": [
      {
        "command": "diff-panel.newDiffEditor",
        "title": "Diff Panel: New Diff Editor"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "diff-panel",
          "title": "Diff Panel",
          "icon": "$(diff)"
        }
      ]
    },
    "views": {
			"diff-panel": [
				{
					"id": "diff-panel",
					"name": "Diff Panel",
          "type": "webview"
				}
			]
    },
    "menus": {
      "editor/title": [
        {
          "command": "diff-panel.newDiffEditor",
          "group": "navigation",
          "when": "resourceScheme == diff-panel"
        }
      ]
    }
  },
  "scripts": {
    "install:all": "pnpm install && cd webview-ui && pnpm install",
    "start:webview": "cd webview-ui && pnpm run start",
    "build:webview": "cd webview-ui && pnpm run build",
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.32"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.4",
    "@types/glob": "^7.2.0",
    "@types/node": "^12.20.55",
    "@types/vscode": "^1.77.0",
    "eslint": "^8.0.0",
    "glob": "^7.2.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.9.5",
    "vscode-test": "^1.6.1"
  }
}
